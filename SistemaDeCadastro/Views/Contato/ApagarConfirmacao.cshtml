@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de apagar o contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<br />
<div class="d-grid gap-2">
    <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Index">Cancelar exclusão</a>
    <a class="btn btn-secondary btn-danger" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.id">Confirmar exclusão</a>
</div>